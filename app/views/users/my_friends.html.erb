<%= render 'friends/lookup' %>

<% if @friendship.size > 0 %>
    <table class= "table table-striped">
        <thead>
            <tr>
                <th colspan="3" class="page-header">
                    <h2>My Friends</h2>
                </th>
            </tr>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </head>
        <tbody>
            <% @friendship.each do |friend| %>
                <tr>
                    <td><%= friend.full_name %></td>
                    <td><%= friend.email %></td>
                    <td>
                        <%= link_to "View Profile", user_path(friend), class:"btn btn-primary btn-xs" %>
                        <%= link_to "Remove Friends", friendship_path(friend), :method => :delete,
                            :data => {:confirm => "Are You sure?"}, class:"btn btn-primary btn-xs" %>
                    </td>
                </tr>
            <% end %> 
        </tbody>
    </table> 

<% else %>
    <div class="row col-lg-12">
        <p class="lead">You don't have any friends yet. Please add some.! </P>
    </div>
<% end %>

